{
  "name": "angular-template",
  "version": "0.0.0",
  "main": "electron/main.js",
  "scripts": {
    "start": "concurrently -k \"ng serve\" \"npm run electron:dev-start\"",
    "build": "concurrently \"ng build --base-href=./\" \"npm run tsc\" ",
    "electron:dev-start":"npm run tsc && wait-on http://localhost:4200 && cross-env NODE_ENV=dev electron ./dist/electron/main.js",
    "electron": "npm run build && electron ./dist/electron/main.js",
    "tsc": "tsc -p tsconfig.electron.json",
    "test": "jest --no-cache",
    "dist": "npm run build && electron-builder --dir",
    "pack": "npm run build && electron-builder --dir --win --x64",
    "release": "npm run build && electron-builder"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.0.0",
    "@angular/common": "^15.0.0",
    "@angular/core": "^15.0.4",
    "@angular/forms": "^15.0.0",
    "@angular/platform-browser": "^15.0.0",
    "@angular/platform-browser-dynamic": "^15.0.0",
    "@angular/router": "^15.0.0",
    "cross-env": "^7.0.3",
    "electron-store": "^8.1.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.0.4",
    "@angular/cli": "~15.0.4",
    "@angular/compiler": "^15.0.0",
    "@angular/compiler-cli": "^15.0.0",
    "@types/debug": "^4.1.7",
    "@types/electron-builder": "^2.8.0",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.17",
    "concurrently": "^7.6.0",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "jest": "^28.1.3",
    "jest-preset-angular": "^12.2.3",
    "typescript": "~4.8.2",
    "wait-on": "^7.0.1"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setup-jest.ts"
    ],
    "globalSetup": "jest-preset-angular/global-setup"
  }
}
